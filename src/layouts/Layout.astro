---
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/portfolio.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Rosendo Garcia | Portfolio</title>
	</head>
	<body>
		<div class="relative h-full w-full bg-slate-950 place-items-center">
			<div
				class="absolute bottom-0 right-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
			>
			</div>
			<div
				class="absolute bottom-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
			>
			</div>
		</div>
		<main class="flex flex-col place-items-center justify-center">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		font-family: 'Onest Variable', sans-serif, system-ui;
		font-size: 16px;
		font-weight: 500;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	::-webkit-scrollbar {
		width: 5px;
	}

	::-webkit-scrollbar-thumb {
		background-color: #fff;
		border-radius: 7px;
	}

	::-webkit-scrollbar-track {
		background-color: transparent;
	}

	body {
		min-height: 100vh;
		overflow: auto;
	}

	section {
		animation: reveal linear both;
		animation-timeline: view();
		animation-range: entry 10% cover 15%;
	}

	@keyframes reveal {
		from {
			opacity: 0;
			translate: 0 75px;
			scale: 0.5;
		}

		to {
			opacity: 1;
			translate: 0 0;
			scale: 1;
		}
	}

</style>
