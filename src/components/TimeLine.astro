---
import Briefcase from '@icons/Briefcase.astro'

import { getI18N } from '@c/i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

/*
  to add more, to 'li' put the class 'mb-10 ms-4' and to the last the class 'ms-4'
  the 'mb-10 ms-4' is larger than 'ms-4' because it has a margin-bottom of 10
*/
---

<section class="mt-3 p-2">
  <div class="flex flex-row w-full mb-3 items-center gap-3 dark:text-white/60 text-black/60">
    <Briefcase class="md:size-5 size-4" />
    <h3 class="md:text-base text-md">{i18n.WORK_EXPERIENCE.LABEL}</h3>
  </div>
  <ol class="relative border-s dark:border-gray-200 border-gray-400">
    <li class="mb-10 ms-4">
      <div class="absolute size-3 dark:bg-emerald-400 bg-emerald-600 rounded-full mt-1.5 -start-1.5 border dark:border-emerald-400 border-emerald-600"></div>
      <time class="mb-1 text-sm font-normal leading-none dark:text-white/80 text-black/80">{i18n.WORK_EXPERIENCE.COMPANY_1.TIME}</time>
      <h3 class="md:text-2xl text-xl font-semibold dark:text-emerald-400 text-emerald-600">{i18n.WORK_EXPERIENCE.COMPANY_1.TITLE}</h3>
      <p class="mb-4 md:text-lg text-base font-normal dark:text-white text-black">{i18n.WORK_EXPERIENCE.COMPANY_1.DESCRIPTION}</p>
    </li>
    <li class="ms-4">
      <div class="absolute size-3 dark:bg-emerald-400 bg-emerald-600 rounded-full mt-1.5 -start-1.5 border dark:border-emerald-400 border-emerald-600"></div>
      <time class="mb-1 text-sm font-normal leading-none dark:text-white/80 text-black/80">{i18n.WORK_EXPERIENCE.COMPANY_2.TIME}</time>
      <h3 class="md:text-2xl text-xl font-semibold dark:text-emerald-400 text-emerald-600">{i18n.WORK_EXPERIENCE.COMPANY_2.TITLE}</h3>
      <p class="md:text-lg text-base font-normal dark:text-white text-black">{i18n.WORK_EXPERIENCE.COMPANY_2.DESCRIPTION}</p>
    </li>
  </ol>
</section>
