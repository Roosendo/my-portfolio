---
const { text, url, mailto } = Astro.props
const link = mailto ? `mailto:${url}` : url
---

<div class='personal-info'>
  <div class='icon'>
    <slot name='icon' />
  </div>
  <div class='text'>
    <a href={link} target='blank'>{text}</a>
  </div>
</div>

<style>
  .personal-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }

  .personal-info:hover {
    color: var(--second-util-color);
  }

  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icon img {
    width: 24px;
    height: 24px;
    margin-right: 10px;
  }

  .text a {
    color: inherit;
    text-decoration: none;
  }

</style>
