---
const { title, body, hasImgs, imgs, hasPrjt, projectLink, githubUrl, languages } = Astro.props

import Pill from './Pill.astro'
---

<section class="flex flex-col gap-4">
  <h2 class="md:text-3xl text-4xl text-yellow-200">{title}</h2>
  <p class="md:text-lg text-2xl">{body}</p>
  <div class="flex flex-row flex-wrap gap-2">
    {
      languages.map((lang: string) => (
        <Pill><span class="text-violet-500 md:text-base text-xl">{lang}</span></Pill>
      ))
    }
  </div>
  {
    hasImgs && (
      <div>
        {imgs.map((img: string, index: number) => (
          <img src={img} alt={`Screenshot ${index + 1}`} loading="lazy" class="w-full h-auto rounded-lg" />
        ))}
      </div>
    )
  }
  <div class="flex flex-row w-full justify-evenly gap-1">
    {hasPrjt && <Pill href={projectLink}><span class="text-white md:text-base text-xl">See project</span></Pill>}
    <Pill href={githubUrl}><span class="text-white md:text-base text-xl">See GitHub</span></Pill>
  </div>
</section>
