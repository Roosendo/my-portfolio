---
const { title, body, hasImgs, imgs, hasPrjt, projectLink, githubUrl, languages } = Astro.props

import Pill from './Pill.astro'
---

<section class="flex flex-col gap-4">
  <h2 class="text-2xl text-yellow-200">{title}</h2>
  <p>{body}</p>
  <div class="flex flex-row flex-wrap gap-2">
    {
      languages.map((lang: string) => (
        <Pill><span class="text-violet-500 text-sm">{lang}</span></Pill>
      ))
    }
  </div>
  {
    hasImgs && (
      <div>
        {imgs.map((img: string, index: number) => (
          <img src={img} alt={`Screenshot ${index + 1}`} loading="lazy" class="w-full h-auto rounded-lg" />
        ))}
      </div>
    )
  }
  <div class="flex flex-row w-full justify-evenly">
    {hasPrjt && <Pill href={projectLink}><span class="text-white">See project</span></Pill>}
    <Pill href={githubUrl}><span class="text-white">See GitHub</span></Pill>
  </div>
</section>
