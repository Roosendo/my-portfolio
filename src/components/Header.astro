---
import LanguageSelector from './LanguageSelector.astro'

import { getI18N } from '@c/i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<header id="header-nav" class="flex justify-center items-center text-[#eea5ee] p-2 mx-auto sticky top-0 w-full z-10">
  <nav class="flex flex-wrap items-center justify-around p-1 gap-3"> 
    <a class="hover:bg-white/10 rounded-lg px-3 transition md:text-base text-sm sm:w-auto" href="#projects">{i18n.HEADER.PROJECTS}</a>
    <a class="hover:bg-white/10 rounded-lg px-3 transition md:text-base text-sm sm:w-auto" href="#about-me">{i18n.HEADER.ABOUT_ME}</a>
    <a class="hover:bg-white/10 rounded-lg px-3 transition md:text-base text-sm sm:w-auto" href="#contact">{i18n.HEADER.CONTACT}</a>
    <LanguageSelector />
  </nav>
</header>
